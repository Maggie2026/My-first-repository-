index.html

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JS Assignment Project</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>JavaScript Project Demo</h1>

    <!-- DOM Interaction #1 -->
    <p id="welcomeMessage"></p>

    <!-- Buttons for DOM Interaction #2 & #3 -->
    <button onclick="sayHello()">Say Hello</button>
    <button onclick="showNumbers()">Show Numbers</button>

    <!-- Placeholder for loop output -->
    <div id="output"></div>

    <script src="script.js"></script>
</body>
</html>


