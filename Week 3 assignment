ðŸŽ¨ Style.css

/* Global reset for consistent spacing */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Basic styling */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f9;
    color: #333;
    padding: 20px;
}

/* Header */
header {
    text-align: center;
    margin-bottom: 20px;
}
header h1 {
    font-size: 2rem;
    color: #2c3e50;
}

/* Navigation bar */
nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 30px;
}

nav a {
    text-decoration: none;
    color: #3498db;
    padding: 8px 15px;
    border-radius: 5px;
    transition: background 0.3s;
}

nav a:hover {
    background: #3498db;
    color: #fff;
}

/* Sections */
.intro {
    background: #fff;
    padding: 20px;
    border: 2px solid #ddd;
    margin-bottom: 20px;
    border-radius: 8px;
}

/* Card Layout */
.cards {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.card {
    background: #fff;
    flex: 1 1 calc(33.333% - 20px);
    min-width: 250px;
    padding: 15px;
    margin: 10px 0;
    border: 2px solid #ccc;
    border-radius: 10px;
    box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
}

/* Card Titles */
.card h3 {
    margin-bottom: 10px;
    color: #2c3e50;
}

/* Footer */
footer {
    text-align: center;
    margin-top: 30px;
    padding: 15px;
    background: #2c3e50;
    color: #fff;
    border-radius: 8px;
}




   

             

